#!/usr/bin/env lua
--/bin/whoami: says who you are

_handler = {}
_handler.signal_handler = function (sig)
    if sig == 'kill' then
        --print("uname: recieved SIGKILL")
        return 0
    end
end

function main(args)
    local cuser = fs.open("/tmp/current_user", 'r')
    local current_user = cuser.readAll()
    cuser.close()
    print(current_user)
end

