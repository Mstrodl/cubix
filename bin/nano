#!/usr/bin/env lua
--/bin/nano: an alternative to program a good text editor.

function main(args)
    --calls edit, but, one time, i might be able to program a full editor like nano.
    local editproc = fork("/rom/programs/edit")
    prexec(editproc, {os.cshell.resolve(args[1])}, nil, nil, nil, true)
end

main({...})
