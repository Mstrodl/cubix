#!/usr/bin/env lua
--/bin/mkdir: wrapper to CC mkdir

_handler = {}
_handler.signal_handler = function(sig)
    if sig == 'kill' then
        --print("mkdir: SIGKILL")
        return 0
    end
end

function main(args)
    local d = args[1]
    cpth = fs.open("/tmp/current_path", 'r')
    cpath = cpth.readAll()
    cpth.close()

    if d[1] == '/' then
        os.runfile("mkdir " .. d)
    elseif not fs.exists(fs.combine(cpath, d)) then
        os.runfile("mkdir " .. fs.combine(cpath, d))
    end
end



