#!/usr/bin/env lua
--/bin/login: login user to its shell access

function main(args)
    local user = args[1]
    if user == nil then user = "^" end
    local HOSTNAME = gethostname()
    local try_user = ""
    local try_pwd = ""

    if user == "^" then
        write(HOSTNAME.." login: ")
        try_user = read()
        write("Password: ")
        try_pwd = read("")
    else
        try_user = user
        write("Password: ")
        try_pwd = read("")
    end

    local hp = lib.auth.start("login")

    local ok = lib.auth.plain_session(hp, try_user, try_pwd)
    if ok then
        sleep(0)

        local k = fs.open("/tmp/current_user", 'w')
        if not k then syslog.panic("cannot open /tmp/current_user") end
        k.write(try_user)
        k.close()

        local new_wd = "/home/"..try_user
        if try_user == 'root' then
            new_wd = '/root'
        else
            new_wd = "/home/"..try_user
        end

        --running csh
        sleep(0)
        local shell_path = fs_readall("/etc/default_sh")
        if not shell_path then
            print("error reading /etc/default_sh, using /bin/lua")
            shell_path = '/bin/lua'
        end

        _setcwd(new_wd)

        return execv(shell_path, {})
    else
        return ferror("\nLogin incorrect")
    end
end

main({...})
